root = true

[*]
charset = utf-8
end_of_line = lf

trim_trailing_whitespace = false
insert_final_newline = true
indent_style = space
max_line_length = 119

[*.py]
quote_type = single

[*.{js,html,css,json}]
indent_size = 2

[Makefile]
trim_trailing_whitespace = true
indent_style = tab
tab_width = 4


[.gitmodules]
trim_trailing_whitespace = true
indent_style = tab
tab_width = 4
